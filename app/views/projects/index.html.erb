<div class="container mx-auto p-6">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">All Projects</h1>
    <%= link_to "New project", new_project_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="projects" class="min-w-full">
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <p><%= link_to project.title, project_path(project), class: "text-blue-600 hover:underline" %></p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No projects found.</p>
    <% end %>
  </div>
</div>
